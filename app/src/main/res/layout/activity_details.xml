<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khalilaamira.myinsta.activities.DetailsActivity"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/postdetail"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PostTitle"
            android:textStyle="bold"
            android:id="@+id/titledetail"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PostDescription"
            android:id="@+id/descriptiondetail"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By:"
                android:layout_gravity="right"
                android:paddingTop="10dp"

                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PostMaker"
                android:layout_gravity="right"
                android:id="@+id/userNamedetail"
                android:layout_margin="5dp"
                android:paddingTop="10dp"/>

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dummy"
                android:foreground="@drawable/userimgpost"
                android:id="@+id/postUserImg"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted At :"
                android:textSize="9dp"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postingTime"
                android:text="zzzzzzzzzzzzz"
                android:textSize="9dp"/>
        </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/deleteBtn"
    android:text="DELETE POST"
    android:background="@drawable/editshipe"
    android:onClick="DeleteClick"/>

    </LinearLayout>

</ScrollView>

</LinearLayout>
